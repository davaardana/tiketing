{
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "lib": ["ESNext"],
    "skipLibCheck": true,
    "types": ["node"]
  },
  "include": ["vite.config.ts", "postcss.config.js", "tailwind.config.ts", "eslint.config.js"],
  "exclude": ["dist", "node_modules"]
}
